{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "roots": ["<rootDir>/test"],
  "moduleNameMapper": {
    "^@entity(|/.*)$": "<rootDir>/sub_modules/entity/src/$1",
    "^@server(|/.*)$": "<rootDir>/src/$1"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "./coverage/spec"
}
